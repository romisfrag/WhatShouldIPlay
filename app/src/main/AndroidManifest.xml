<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="romisfrag.whatshouldiplay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ApplicationCustom"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".initialActivities.LoadingScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GamePackage.ParameterMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".Display.DisplayCards"
            android:screenOrientation="portrait"/>
        <activity android:name=".Display.DisplayCardElem"
            android:screenOrientation="portrait"/>
        <activity android:name=".initialActivities.MainMenu"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>